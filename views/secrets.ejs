<%- include('partials/header'); -%>


    <div  class="jumbotron text-center mt-5 ">
        <div class="container ">
            <i class="fa-solid fa-key  fa-6x"></i>
            <h1 class="display-3 mb-3">You've Discovered my Secrets!</h1>

            <% if(foundmessage.length> 0){ %>
                

                <% foundmessage.forEach((secretmessage)=>{ %>
                    <form class="delete-form" action="/deletemsg" method="post">
                    <input type="hidden" name="messageid" value="<%= secretmessage._id %>">
                        <p class="secret-text"> 
                        
                    
                        <i data-icon-name="trash"  onclick="submitForm(this)"  
                        id="recycle" class="fa-solid fa-sm fa-trash fa-shake"></i>
                    
                        <%= secretmessage.message %> <br>
                   
                    </p>
                </form>
                
                
                    <% }) %>

              

                        <% } else { %>

                            <p  class="secret-text"> No secrets found. Submit a secret <br> </p>

                            <% } %>


                                <hr>
                                <a class="btn btn-secondary btn-lg mb-3" href="/logout" role="button">Logout</a>
                                <a class="btn btn-dark btn-lg mb-3" href="/submit" role="button"> Submit a Secret </a>
        </div>
    </div>


    <script>

function submitForm(icon) {
    var form = icon.closest('.delete-form');
    form.submit();
}
    </script>

    <%- include('partials/footer'); -%>




    