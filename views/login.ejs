<%- include('partials/header'); -%>


    <div class=" container mt-5">
        <h1>Login</h1>
        <div class="row ">
            <div class="col-sm-8 ">
                <div class="card ">
                    <div class="card-body">
                         
                        <small style="color: rgba(0, 0, 0, 0.5);"> <%= incorrect %> </small>
                        <form action="/secrets" method="post">
                            <div class="form-group mt-2">
                                <label for="email">Email</label>
                                <input required type="email" class="form-control mt-2" name="username"
                                    placeholder="Enter your Email address">
                            </div>

                            <div class="form-group mt-2">
                                <label  for="password">Password</label>
                                <input required type="password" class="form-control mt-2" name="password"
                                    placeholder="Enter your Password">
                            </div>

                            <button class="btn btn-dark mt-4" type="submit">Login</button>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>














    <%- include('partials/footer'); -%>